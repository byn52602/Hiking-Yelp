<% layout('layouts/boilerplate') %>
    <h1>All Hiking Trails</h1>
    <% for (let h of hikings) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=h.image[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=h.title%>
                        </h5>
                        <p class="card-text">
                            <small class="text-muted">
                                Location: <%=h.location%>
                                    <br>
                                    Total Length: <%=h.lengthKM%>km
                                        <br>
                                        Difficulty: <%=h.difficulty%>
                            </small>
                        </p>
                        <p class="card-text">
                            <%=h.description%>
                                <br>
                                <a class="btn btn-primary" href="/hiking/<%=h._id%>"> View</a>
                    </div>
                </div>
            </div>
        </div>

        <%}%>