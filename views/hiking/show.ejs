<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%=hiking.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=hiking.title%>
                    </h5>
                    <p class="card-text">
                        <%=hiking.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Location: <%=hiking.location%>
                    </li>
                    <li class="list-group-item">Length: <%=hiking.lengthKM%> km</li>
                    <li class="list-group-item">Hours: <%=hiking.hours%>
                    </li>
                </ul>
                <div class="card-body">
                    <form class="d-inline" action="/hiking/<%=hiking._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <a href="/hiking/<%=hiking._id%>/edit" class="card-link btn btn-warning">Edit</a>
                </div>
                <div class="card-footer">
                    <a href="/hiking"> Show All Hiking Trails</a>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2>Leave a Review</h2>
            <form action="/hiking/<%=hiking._id%>/reviews" method="POST" class="needs-validation mb-3" novalidate>
                <div class="mb-3">
                    <fieldset class="starability-basic">
                        <legend>Rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea required class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% for (let r of hiking.reviews) {%>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <h5>Reviews</h5>
                            <p class="starability-result" data-rating="<%=r.rating %>">
                                Rated: <%=r.rating %> stars
                            </p>
                        </h5>
                        <p class="card-text">
                            <%=r.body%>
                        </p>
                        <form action="/hiking/<%= hiking._id %>/reviews/<%= r._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger"> Delete</button>
                        </form>
                    </div>
                </div>
                <% }%>
        </div>
    </div>